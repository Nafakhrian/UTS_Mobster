<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Berita"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#54a0ff">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:text="Data Berita"
        android:textSize="35sp"
        android:textColor="#fff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/editTextJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Judul"
            android:textColorHint="#c8d6e5"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/editTextWaktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Waktu"
            android:layout_marginTop="20dp"
            android:textColorHint="#c8d6e5"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/editTextPenulis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Penulis"
            android:layout_marginTop="20dp"
            android:textColorHint="#c8d6e5"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/editTextIsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Isi"
            android:layout_marginTop="20dp"
            android:textColorHint="#c8d6e5"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Simpan"/>
    </LinearLayout>

</LinearLayout>